<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoAppo_StevenVR.Views.MyAppointmentListPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="My Appointment List"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <ListView x:Name="LstAppoList" RowHeight="100" SeparatorVisibility="Default" BackgroundColor="#7F7AF8"  >
                <ListView.ItemTemplate>
                    <DataTemplate>

                        <ImageCell Text="{Binding Notes}" 
                                   Detail="{Binding AppoDate}" 
                                   ImageSource="xamarin_logo"
                                   TextColor="Black" DetailColor="Black"
                                   />



                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>